<div class="container text-center">
<div class="rows">
<h1>Movies</h1>
</div>
<div class="rows">
<%= link_to "New Movie", new_movie_path %>
<% @movies.each do |movie| %>
    <div>
        <%= movie.inspect %>
        <%= link_to "Edit", edit_movie_path(movie) %>
        <%= link_to "Delete", movie_path(movie),
                                method: :delete ,
                                data: {confirm: 'Are you sure?'} %>
    </div>
<% end %>
</div>
</div>
